<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/secondLayer1"
        android:layout_weight="0.05">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_weight="0.3" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Welcome to another election year!"
                android:id="@+id/welcome_text"
                android:focusableInTouchMode="false"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center|bottom"
                android:gravity="right" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.31"
                android:padding="7dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/headbg"
                    android:alpha="0.8"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/localPicture"
                        android:layout_weight="0.35"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.65"
                        android:weightSum="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:id="@+id/localPolitianNameView"
                            android:background="#e1ffffff"
                            android:gravity="center_vertical|left"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical|top" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:id="@+id/localPolitianEndofDateView"
                            android:background="#e1ffffff"
                            android:gravity="center_vertical|left"
                            android:textSize="11dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:id="@+id/localPolitianAdd"
                            android:background="#e1ffffff"
                            android:gravity="center_vertical|left"
                            android:textSize="13dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:id="@+id/localPolitianPhone"
                            android:background="#e1ffffff"
                            android:gravity="center_vertical|left"
                            android:textSize="13dp"
                            android:layout_gravity="center_vertical" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/imageView11" />
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.69"
                android:weightSum="1"
                android:padding="7dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Committee Served:"
                    android:id="@+id/textView4"
                    android:layout_weight="0.07"
                    android:background="#e1ffffff"
                    android:textStyle="italic"
                    android:textSize="15dp" />

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/ScrollView1"
                    android:layout_weight=".43"
                    android:background="#e1ffffff"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="false"
                        android:id="@+id/committeeText" />
                </ScrollView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="7dp"
                    android:id="@+id/imageView10" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Bills supported:"
                    android:id="@+id/textView5"
                    android:layout_weight="0.07"
                    android:background="#e1ffffff"
                    android:textStyle="italic"
                    android:textSize="15dp" />

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/BillScrollView"
                    android:layout_weight=".43"
                    android:background="#e1ffffff"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="false"
                        android:id="@+id/billsText" />
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/elec2012detailBtn"
            android:layout_weight="0.45"
            android:background="@drawable/elec2012"
            android:alpha="0.8" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:layout_weight="0.1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/returnButton"
            android:layout_weight="0.45"
            android:background="@drawable/home_button"
            android:alpha="0.8" />
    </LinearLayout>

</LinearLayout>